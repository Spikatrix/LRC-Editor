<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:navigationBarColor">@color/black</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppThemeDarker" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#262626</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:actionBarStyle">@color/black</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppThemeDark.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
