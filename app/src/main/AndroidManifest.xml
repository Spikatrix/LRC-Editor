<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.cg.lrceditor">

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:requestLegacyExternalStorage="true"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:screenOrientation="portrait"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name=".HomePage"
			android:label="@string/app_name"
			android:theme="@style/AppTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".CreateActivity"
			android:label="@string/create" />
		<activity
			android:name=".EditorActivity"
			android:configChanges="orientation|screenLayout|smallestScreenSize|screenSize|uiMode"
			android:label="@string/editor">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />

				<category android:name="android.intent.category.DEFAULT" />

				<data android:scheme="content" />
				<data android:scheme="file" />
				<data android:host="*" />
				<data android:mimeType="*/*" />
				<data android:pathPattern=".*\\.lrc" />
				<data android:pathPattern=".*\\..*\\.lrc" />
				<data android:pathPattern=".*\\..*\\..*\\.lrc" />
				<data android:pathPattern=".*\\..*\\..*\\..*\\.lrc" />
			</intent-filter>
		</activity>
		<activity
			android:name=".AboutActivity"
			android:label="@string/about" />
		<activity
			android:name=".FinalizeActivity"
			android:label="@string/finalization_header" />
		<activity
			android:name=".SettingsActivity"
			android:label="@string/settings" />
	</application>

</manifest>